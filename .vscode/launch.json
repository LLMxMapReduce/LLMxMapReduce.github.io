{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}", // 使用当前打开的文件
            "envFile": "${workspaceFolder}/.env", // 加载 .env 文件
            "env": {
                "NODE_ENV": "development"
                // 在这里可以添加其他环境变量
            }
        }
    ]
}